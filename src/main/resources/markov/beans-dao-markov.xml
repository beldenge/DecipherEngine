<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	profile="markov">

	<bean class="com.ciphertool.engine.dao.MarkovModelDao" id="markovModelDao">
		<property name="importer" ref="markovImporterImpl" />
	</bean>

	<bean class="com.ciphertool.sherlock.etl.importers.MarkovImporterImpl" id="markovImporterImpl">
		<property name="corpusDirectory" value="${markov.corpus.directory}" />
		<property name="order" value="${markov.order}" />
		<property name="minCount" value="${markov.min.count}" />
		<property name="taskExecutor" ref="taskExecutor" />
	</bean>
</beans>