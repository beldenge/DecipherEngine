<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.ciphertool.sentencebuilder.dao.WordDao" id="wordDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean class="com.ciphertool.sentencebuilder.dao.NGramDao" id="nGramDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean class="com.ciphertool.sentencebuilder.dao.FrequencyWordListDao" id="wordListDao">
		<constructor-arg index="0" type="com.ciphertool.sentencebuilder.dao.WordDao">
			<ref bean="wordDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.graph.words.count}" />
	</bean>

	<bean class="com.ciphertool.sentencebuilder.dao.UniqueWordListDao" id="uniqueWordListDao">
		<constructor-arg index="0" type="com.ciphertool.sentencebuilder.dao.WordDao">
			<ref bean="wordDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.graph.words.count}" />
	</bean>
	
	<bean class="com.ciphertool.sentencebuilder.dao.UniqueNGramListDao" id="nGramListDao">
		<constructor-arg index="0" type="com.ciphertool.sentencebuilder.dao.NGramDao">
			<ref bean="nGramDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.ngram.two.topWords}" />
		<constructor-arg index="2" type="java.lang.Integer" value="${fitness.ngram.three.topWords}" />
		<constructor-arg index="3" type="java.lang.Integer" value="${fitness.ngram.four.topWords}" />
		<constructor-arg index="4" type="java.lang.Integer" value="${fitness.ngram.five.topWords}" />
	</bean>
	
	<!-- As of now, this DAO is too high memory utilization and slows down the app too much. -->
	<!-- <bean class="com.ciphertool.sentencebuilder.dao.BasicWordMapDao"
		id="wordMapDao">
		<constructor-arg index="0"
			type="com.ciphertool.sentencebuilder.dao.WordDao">
			<ref bean="wordDao" />
		</constructor-arg>
	</bean> -->

	<bean class="com.ciphertool.zodiacengine.dao.ForcedWordGeneDao" id="geneDao">
		<property name="wordListDao" ref="wordListDao" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.dao.PlaintextSequenceDao" id="sequenceDao" />

	<bean class="com.ciphertool.zodiacengine.dao.CipherDao" id="cipherDao">
		<property name="mongoTemplate" ref="mongoTemplate" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.dao.SolutionDao" id="solutionDao">
		<property name="mongoTemplate" ref="mongoTemplate" />
	</bean>

	<bean class="com.ciphertool.genetics.dao.ExecutionStatisticsDao" id="executionStatisticsDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.dao.cipherkey.CipherKeyGeneDao" id="cipherKeyGeneDao" />
</beans>