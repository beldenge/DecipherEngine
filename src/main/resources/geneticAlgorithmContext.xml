<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath*:beans-fitness.xml" />
	<import resource="classpath*:beans-selection.xml" />
	<import resource="classpath*:beans-mutation.xml" />
	<import resource="classpath*:beans-crossover.xml" />

	<!-- <bean class="com.ciphertool.zodiacengine.SolutionBreeder" id="breeder">
		<property name="wordListDao" ref="wordListDao" />
	</bean> -->

	<bean class="com.ciphertool.zodiacengine.CipherKeyBreeder" id="breeder">
		<property name="geneDao" ref="cipherKeyGeneDao" />
	</bean>

	<bean class="com.ciphertool.genetics.Population" id="population">
		<property name="breeder" ref="breeder" />
		<property name="fitnessEvaluator" ref="defaultFitnessEvaluator" />
		<property name="taskExecutor" ref="taskExecutor" />
		<property name="lifespan" value="${genetic.algorithm.lifespan}" />
		<property name="fitnessComparator" ref="defaultFitnessComparator" />
		<property name="selector" ref="defaultSelector" />
		<property name="chromosomePrinter" ref="cipherKeyIndexedNGramChromosomePrinter" />
	</bean>

	<bean class="com.ciphertool.genetics.util.KeylessChromosomeHelper" id="chromosomeHelper">
		<property name="geneDao" ref="geneDao" />
	</bean>

	<bean class="com.ciphertool.genetics.util.Coin" id="coin" />

	<bean class="com.ciphertool.genetics.util.RandomListElementSelector" id="randomListElementSelector" />

	<bean class="com.ciphertool.genetics.algorithms.StandardGeneticAlgorithm" id="geneticAlgorithm">
		<property name="population" ref="population" />
		<property name="taskExecutor" ref="taskExecutor" />
		<property name="executionStatisticsDao" ref="executionStatisticsDao" />
		<property name="verifyAncestry" value="${fitness.ancestry.verify}" />
		<property name="generationsToSkip" value="${fitness.ancestry.min}" />
		<property name="generationsToKeep" value="${fitness.ancestry.max}" />
		<property name="elitism" value="${genetic.algorithm.elitism}" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.dao.cipherkey.TopWordsFacade" id="topWordsFacade">
		<property name="top" value="${fitness.graph.words.count}" />
		<property name="wordListDao" ref="uniqueWordListDao" />
		<property name="nGramListDao" ref="nGramListDao" />
		<property name="minWordLength" value="${fitness.min.word.length}" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.printer.CipherKeyChromosomePrinter" id="cipherKeyChromosomePrinter">
		<property name="topWordsFacade" ref="topWordsFacade" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.printer.CipherKeyCorpusChromosomePrinter" id="cipherKeyCorpusChromosomePrinter">
		<property name="minWordLength" value="${fitness.min.word.length}" />
	</bean>

	<bean class="com.ciphertool.zodiacengine.printer.CipherKeyIndexedNGramChromosomePrinter" id="cipherKeyIndexedNGramChromosomePrinter">
		<property name="topWordsFacade" ref="topWordsFacade" />
	</bean>
</beans>