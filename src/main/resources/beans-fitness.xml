<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath:dict/beans-fitness-dict.xml" />
	<import resource="classpath:markov/beans-fitness-markov.xml" />

	<bean class="com.ciphertool.genetics.fitness.AscendingFitnessComparator" id="defaultFitnessComparator" />

	<bean class="com.ciphertool.engine.fitness.cipherkey.CipherKeyKnownSolutionFitnessEvaluator" id="cipherKeyKnownSolutionFitnessEvaluator" />

	<bean class="com.ciphertool.engine.fitness.cipherkey.CipherKeyKnownSolutionCrowdingFitnessEvaluator" id="cipherKeyKnownSolutionCrowdingFitnessEvaluator">
		<property name="minCrowdSize" value="${fitness.sharing.min.crowd.size}" />
		<property name="penaltyFactor" value="${fitness.sharing.penalty.factor}" />
		<property name="sigma" value="${fitness.sharing.sigma}" />
	</bean>
</beans>