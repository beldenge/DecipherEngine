<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	profile="dictionary">

	<bean class="com.ciphertool.sherlock.dao.NGramDao" id="nGramDao">
		<property name="mongoTemplate" ref="mongoTemplate" />
	</bean>

	<bean class="com.ciphertool.sherlock.dao.UniqueNGramListDao" id="nGramListDao">
		<constructor-arg index="0" type="com.ciphertool.sherlock.dao.NGramDao">
			<ref bean="nGramDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.ngram.two.topWords}" />
		<constructor-arg index="2" type="java.lang.Integer" value="${fitness.ngram.three.topWords}" />
		<constructor-arg index="3" type="java.lang.Integer" value="${fitness.ngram.four.topWords}" />
		<constructor-arg index="4" type="java.lang.Integer" value="${fitness.ngram.five.topWords}" />
	</bean>
	
	<bean class="com.ciphertool.sherlock.dao.WordDao" id="wordDao">
		<property name="mongoTemplate" ref="mongoTemplate" />
	</bean>

	<bean class="com.ciphertool.sherlock.dao.BasicWordMapDao" id="wordMapDao">
		<constructor-arg index="0" type="com.ciphertool.sherlock.dao.WordDao">
			<ref bean="wordDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.graph.words.count}" />
	</bean>

	<bean class="com.ciphertool.sherlock.dao.FrequencyWordListDao" id="wordListDao">
		<constructor-arg index="0" type="com.ciphertool.sherlock.dao.WordDao">
			<ref bean="wordDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.graph.words.count}" />
	</bean>

	<bean class="com.ciphertool.sherlock.dao.UniqueWordListDao" id="uniqueWordListDao">
		<constructor-arg index="0" type="com.ciphertool.sherlock.dao.WordDao">
			<ref bean="wordDao" />
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.Integer" value="${fitness.graph.words.count}" />
	</bean>

	<bean class="com.ciphertool.engine.dao.TopWordsFacade" id="topWordsFacade">
		<property name="top" value="${fitness.graph.words.count}" />
		<property name="wordListDao" ref="uniqueWordListDao" />
		<property name="nGramListDao" ref="nGramListDao" />
		<property name="minWordLength" value="${fitness.min.word.length}" />
	</bean>
</beans>