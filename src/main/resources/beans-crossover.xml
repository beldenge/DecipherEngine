<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="com.ciphertool.genetics.algorithms.crossover.LiberalCrossoverAlgorithm" id="liberalCrossoverAlgorithm">
		<property name="fitnessEvaluator" ref="defaultFitnessEvaluator" />
		<property name="geneDao" ref="geneDao" />
		<property name="chromosomeHelper" ref="chromosomeHelper" />
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.LiberalUnevaluatedCrossoverAlgorithm" id="liberalUnevaluatedCrossoverAlgorithm">
		<property name="geneDao" ref="geneDao" />
		<property name="chromosomeHelper" ref="chromosomeHelper" />
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="coin" ref="coin" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.ConservativeCrossoverAlgorithm" id="conservativeCrossoverAlgorithm">
		<property name="fitnessEvaluator" ref="defaultFitnessEvaluator" />
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.ConservativeUnevaluatedCrossoverAlgorithm" id="conservativeUnevaluatedCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.LowestCommonGroupCrossoverAlgorithm" id="lowestCommonGroupCrossoverAlgorithm">
		<property name="fitnessEvaluator" ref="defaultFitnessEvaluator" />
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.LowestCommonGroupUnevaluatedCrossoverAlgorithm" id="lowestCommonGroupUnevaluatedCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="coin" ref="coin" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.ConservativeSinglePointCrossoverAlgorithm" id="conservativeSinglePointCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="randomListElementSelector" ref="randomListElementSelector" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.cipherkey.RandomSinglePointCrossoverAlgorithm" id="defaultCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="maxGenerations" value="${fitness.ancestry.max}" />
	</bean>
	
	<bean class="com.ciphertool.genetics.algorithms.crossover.cipherkey.RandomSinglePointGuaranteedCrossoverAlgorithm" id="randomSinglePointGuaranteedCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="maxGenerations" value="${fitness.ancestry.max}" />
		<property name="maxAttempts" value="${max.mutation.attempts}" />
		<property name="fitnessEvaluator" ref="cipherKeyIndexedWordGraphCorpusFitnessEvaluator" />
	</bean>

	<bean class="com.ciphertool.genetics.algorithms.crossover.cipherkey.EqualOpportunityGeneCrossoverAlgorithm" id="equalOpportunityGeneCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="coin" ref="coin" />
		<property name="maxGenerations" value="${fitness.ancestry.max}" />
	</bean>
	
	<bean class="com.ciphertool.genetics.algorithms.crossover.cipherkey.EqualOpportunitySwapCrossoverAlgorithm" id="equalOpportunitySwapCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="coin" ref="coin" />
		<property name="maxGenerations" value="${fitness.ancestry.max}" />
	</bean>
	
	<bean class="com.ciphertool.genetics.algorithms.crossover.cipherkey.EqualOpportunityGuaranteedCrossoverAlgorithm" id="equalOpportunityGuaranteedCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="coin" ref="coin" />
		<property name="maxGenerations" value="${fitness.ancestry.max}" />
		<property name="fitnessEvaluator" ref="cipherKeyIndexedWordGraphCorpusFitnessEvaluator" />
		<property name="maxAttempts" value="${max.mutation.attempts}" />
	</bean>
	
	<bean class="com.ciphertool.genetics.algorithms.crossover.cipherkey.EqualOpportunityGuaranteedSwapCrossoverAlgorithm" id="equalOpportunityGuaranteedSwapCrossoverAlgorithm">
		<property name="mutationAlgorithm" ref="defaultMutationAlgorithm" />
		<property name="coin" ref="coin" />
		<property name="maxGenerations" value="${fitness.ancestry.max}" />
		<property name="fitnessEvaluator" ref="defaultFitnessEvaluator" />
		<property name="maxAttempts" value="${max.mutation.attempts}" />
	</bean>
</beans>